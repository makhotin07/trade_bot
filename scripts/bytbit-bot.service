[Unit]
Description=Bybit Trading Bot
After=network.target

[Service]
Type=simple
User=your_user
WorkingDirectory=/path/to/bytbit-trading-bot
Environment="PATH=/path/to/bytbit-trading-bot/.venv/bin"
ExecStart=/path/to/bytbit-trading-bot/.venv/bin/python main.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target

